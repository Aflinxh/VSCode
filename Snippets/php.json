	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }

	// "$this in CodeIgniter": {
	// 	"prefix": "this",
	// 	"body": "\\$this->$1->$2('$3');$0"
	// },

	"$this": {
		"prefix": "this",
		"body": "\\$this->"
	},

	"POST": {
		"prefix": "post",
		"body": "\\$_POST[\"$1\"]"
	},

	"if isset POST": {
		"prefix": "ifpost",
		"body": ["if(isset(\\$_POST[\"$1\"])){", "\t$0", "}"]
	},

	"GET": {
		"prefix": "get",
		"body": "\\$_GET[\"$1\"]"
	},

	"if isset GET": {
		"prefix": "ifget",
		"body": ["if(isset(\\$_GET[\"$1\"])){", "\t$0", "}"]
	},

	"Constructor": {
		"prefix": "construct",
		"body": ["public function __construct($1) {", "\t$0", "}"]
	}
}
